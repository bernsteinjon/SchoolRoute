<!DOCTYPE html>
  <html lang="en">
    <head>
      <title>SchoolRoute</title>

      <!--  css-->
      <%= stylesheet_link_tag 'bootstrap.min.css' %>
      <%= stylesheet_link_tag 'fixed.css' %>
      <%= stylesheet_link_tag 'video-fixed.css' %>
      <%= stylesheet_link_tag 'style.css' %>

    </head>
    <body data-spy="scroll" data-target="#navbarResponsive">
      <header>
        <!-- NAVBAR SECTION -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top">
          
          <h2 class="navbar-brand">SchoolRoute Logo</h2>
          <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarResponsive">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <span class="navbar-nav mr-auto">       <!-- This is a spacer to move dropdown menu to the right -->
            </span>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Username
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Dashboard</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ url('/logout') }}">Logout</a>
                </li>
            </ul>
          </div>
        </nav>
        <!-- END NAVBAR SECTION -->

        <!-- HOME SECTION -->
        <div id="dashboard">
          <div class="dashboard">

            <!-- CAPTION -->
            <div class="caption text-center">
              <h2><a href="#">Username's</a> Dashboard</h2>
              <ul class="dashboard-ctrl-panel">
                <li><a class="btn btn-outline-light btn-lg" href="#">Create New Walking School Bus</a></li>
                <li><a class="btn btn-outline-light btn-lg" href="#">Redeem Prize</a></li>
                <li><a class="btn btn-outline-light btn-lg" href="#">Search for Volunteer</a></li>
                <li><a class="btn btn-outline-light btn-lg" href="#">Edit Profile</a></li>
                <li><a class="btn btn-outline-light btn-lg" href="#">Logout</a></li>
              </ul>
            </div>
          </div>
        </div>
        <!-- END HOME SECTION -->
      </header>

      <footer>
        <div class="container">
          <p>MSF - Copyright &copy; 2019</p>
        </div>
      </footer>

      <!-- Script Sources -->
      <%= javascript_include_tag 'jquery-3.3.1.min.js' %>
      <%= javascript_include_tag 'bootstrap.min.js' %>
      <%= javascript_include_tag 'navbar.js' %>
      <%= javascript_include_tag 'https://use.fontawesome.com/releases/v5.5.0/js/all.js' %>
    </body>
  </html>
