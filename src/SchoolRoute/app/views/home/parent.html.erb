<%-# Written by Brandon Hong, Jon Bernstein, Gavin Bowman %>

<!DOCTYPE html>
  <html lang="en">
    <head>
      <title>SchoolRoute</title>

      <!--  css-->
      <%= stylesheet_link_tag 'bootstrap.min.css' %>
      <%= stylesheet_link_tag 'style.css' %>

    </head>
    <body data-spy="scroll" data-target="#navbarResponsive">
      <header>
        <!-- NAVBAR SECTION -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top">
          
          <h2 class="navbar-brand">SchoolRoute</h2>
          <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarResponsive">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <span class="navbar-nav mr-auto">       <!-- This is a spacer to move dropdown menu to the right -->
            </span>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <%= current_user.email%>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Dashboard</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                    </div>
                </li>
                <li class="nav-item">
                   <!-- <a class="nav-link" href="#">Logout</a>-->
		   <a <%= link_to "Logout", logout_path %> </a>
                </li>
            </ul>
          </div>
        </nav>
        <!-- END NAVBAR SECTION -->

        <!-- HOME SECTION -->
        <div id="dashboard">
          <div class="dashboard">

            <div class="col-md-12 text-center dashTheme">
                <h1><%= current_user.email%></h1>
                <h4>Parent</h4>              
            </div>
            <div class="row" style="margin-top: 2rem;">
              <div class="col-md-6 text-center">
                <div class="student-sect sect-label">
                  <h1>Students</h1>

                  <div class="row">
                    <div class="form-container">
                      <%= form_for :student, url: students_path  do |f| %>
                        <p>
                          <%= f.text_field :name, :placeholder => "Student Name" %>
                      

                      
                          <%= f.submit "Register Student", :class => "btn btn-primary" %>
                          <br>
                        </p>
                        
                        <% end %>
                      </div>
                  </div> <!-- END ROW DIV -->

                  <div class="list">
                    <div class = "container">
                      <% @student.each do |student| %>
                              <div class="well list_style" >
                                      <h3><%= student.name%></h3>
                                      <%= link_to "Delete", student_path(student), method: :delete,
                                                                                    data: {confirm: 'Confirm?'}, :class => 'btn btn-danger' %>
                              </div>
                      <% end %>             
                      </div>
                    </div>
                </div>

                <div class="list">
                  <div class="sect-label">
                    <h1>Volunteers</h1>
                  </div>
                  <ul>
                      <li><p>John Smith</p><%= link_to "View", home_v1_path, :class => 'btn btn-default' %></li>
                      <li><p>Bill Higgens</p><%= link_to "View",  home_v2_path, :class => 'btn btn-default' %></li>
                      <li><p>Sarah Park</p><%= link_to "View", home_v3_path, :class => 'btn btn-default' %></li>
                      <li><p>Alice Li</p><%= link_to "View", home_v4_path, :class => 'btn btn-default' %></li>
                    </ul>
                </div>

                
              </div>
              
              <div class="col-md-6">
                <div class="sect-label">
                  <h1>Bus Stops</h1>
     
  			<% @posts.each do |post| %>
				<div class="well">
					<h3><%= post.title %></h3>
				</div>
			<% end %>
                	
                    
                  
                </div>
              </div>
            </div>  <!-- END ROW DIV -->  

          </div>
        </div>
        <!-- END HOME SECTION -->
      </header>

      <footer>
        <div class="container">
          <p>Developed by students at The College of New Jersey</p>
        </div>
      </footer>

      <!-- Script Sources -->
      <%= javascript_include_tag 'jquery-3.3.1.min.js' %>
      <%= javascript_include_tag 'bootstrap.min.js' %>
    </body>
  </html>
